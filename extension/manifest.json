{
  "manifest_version": 3,
  "name": "ImageFix Link Import Companion v1.2",
  "version": "1.2.0",
  "description": "Automatically capture NotebookLM slides and send them to ImageFix webapp for editing. Just paste a link!",
  "author": "ImageFix Team",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "http://localhost:3000/*",
    "https://imagefix-dun.vercel.app/*"
  ],
  "optional_host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "service_worker.js"
  },
  "content_scripts": [
    {
      "matches": ["https://notebooklm.google.com/*"],
      "js": ["content_script.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://imagefix-dun.vercel.app/*",
        "http://localhost:3000/*"
      ],
      "js": ["webapp_bridge.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Export NotebookLM slide to ImageFix",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
